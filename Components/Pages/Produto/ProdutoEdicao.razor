@page "/produtos/{Id:int}/editar"
@rendermode InteractiveServer

@using AppWeb.Models;
@inject ProdutoDAO produtoDAO;
@inject NavigationManager Navigation;

<PageTitle>Produtos</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização Produto - @produto.Nome</h1>

@if (erro != string.Empty)
{
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Erro!</strong>
    <span class="block sm:inline">@erro</span>
  </div>
}

<EditForm Model="produto" OnSubmit="Salvar">
  <div class="mb-4">
    <label for="nome" class="block text-sm font-medium text-gray-700">Nome</label>
    <input @bind-value="produto.Nome" type="text" id="nome"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>
  <div class="mb-4">
    <label for="quantidade" class="block text-sm font-medium text-gray-700">Quantidade</label>
    <input @bind-value="produto.Quantidade" type="number" id="quantidade"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>
  <div class="mb-4">
    <label for="valor" class="block text-sm font-medium text-gray-700">Valor</label>
    <input @bind-value="produto.Valor" type="text" id="valor"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>

  <div class="mb-4">
    <label for="descricao" class="block text-sm font-medium text-gray-700">Descrição</label>
    <textarea id="descricao"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">@produto.Descricao</textarea>
  </div>

  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

  private string erro = string.Empty;

  [Parameter]
  public int Id { get; set; }

  [SupplyParameterFromForm]
  private Produto produto { get; set; } = new();

  protected override void OnInitialized()
  {
    var _produto = produtoDAO.BuscarPorId(Id);

    if (_produto != null)
    {
      produto = _produto;
    }
    else
    {
      erro = "Produto não encontrado.";
    }
  }

  private void Salvar()
  {
    try
    {
      produtoDAO.Atualizar(produto);

      Navigation.NavigateTo("/produtos");
    }
    catch (Exception ex)
    {
      erro = $"Erro ao salvar o produto: {ex.Message}";
    }

  }
}