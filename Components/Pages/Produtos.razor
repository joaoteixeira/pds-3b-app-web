@page "/produtos"

@using AppWeb.Models;
@inject ProdutoDAO produtoDAO;

<PageTitle>Produtos</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Produtos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Quantidade</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        @{
            int contador = 1;

            @foreach(var produto in listaProdutos)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Quantidade</td>
                    <td>R$ @produto.Valor</td>
                </tr>

                contador++;
            }
        }
    </tbody>
</table>

@code {
    private List<Produto> listaProdutos = new();

    protected override void OnInitialized()
    {
        CarregarProdutos();
    }

    private void CarregarProdutos()
    {
        listaProdutos = produtoDAO.ListarTodos();
    }
}
